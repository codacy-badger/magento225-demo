<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/
Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Srtpl_NewMenuItem::mainmenu" title="Main Menu"
                    sortOrder="100">
                    <resource id="Srtpl_NewMenuItem::submenu1" title="Sub Menu1"
                        sortOrder="1" />
                    <resource id="Srtpl_NewMenuItem::submenu2" title="Sub Menu2"
                        sortOrder="2" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Srtpl_NewMenuItem::system_config"
                                title="Simple Menu" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>